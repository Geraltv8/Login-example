<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.view.HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/white"
        app:title="Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="433dp"
        android:layout_height="639dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="TextView"
            android:textSize="24sp" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonGrid"
            android:padding="16dp"
            android:layout_margin="16dp"
            app:columnCount="2"
            app:useDefaultMargins="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCursos"
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_height="70dp"
                android:text="Cursos"
                android:textColor="@color/black"
                android:background="@drawable/button_background"
                app:icon="@drawable/ic_launcher_background"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="16dp"
                app:layout_columnWeight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDocentes"
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_height="70dp"
                android:text="docentes"
                android:textColor="@color/black"
                android:background="@drawable/button_background"
                app:icon="@drawable/ic_launcher_background"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="16dp"
                app:layout_columnWeight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAlumnos"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:text="Alumnos"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_launcher_background"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:layout_columnWeight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAlgo"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:text="Proximamente"
                android:textColor="@color/black"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_launcher_background"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:layout_columnWeight="1" />

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>